<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Social Play Web Application</display-name>
  <description></description>

  <!-- servlet definitions -->
  <servlet>
    <servlet-name>SocialPlayServlet</servlet-name>
    <servlet-class>com.linkedin.restli.server.RestliServlet</servlet-class>
    <async-supported>true</async-supported>
    <init-param>
      <param-name>resourcePackages</param-name>
      <param-value>com.peets.socialplay.server.impl</param-value>
    </init-param>
    <init-param>
      <param-name>parseqThreadPoolSize</param-name>
      <param-value>10</param-value>
    </init-param>
    <init-param>
      <param-name>asyncTimeout</param-name>
      <param-value>30000</param-value>
    </init-param>    
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- servlet mappings -->
  <servlet-mapping>
    <servlet-name>SocialPlayServlet</servlet-name>
    <url-pattern>/SocialPlay-server/*</url-pattern>
  </servlet-mapping>

</web-app>
